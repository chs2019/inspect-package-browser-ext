{
  "manifest_version": 3,
  "name": "NPM Packages",
  "description": "Inspect dependencies in package.json on GitHub.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "24": "images/icon-24.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon-24.png",
        "images/home.png",
        "images/brand-github.png"
      ],
      "extension_ids": ["*"],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup/panel.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.github.com/*/package.json",
        "https://github.com/*/package.json"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/service-worker.js",
    "type": "module"
  },
  "host_permissions": ["https://registry.npmjs.org/*"]
}
